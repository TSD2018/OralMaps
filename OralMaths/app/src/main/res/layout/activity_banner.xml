<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BannerActivity">

    <TextView
            android:text="Welcome or Congratulations"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:id="@+id/textViewWelcomeAndCongrats" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textAlignment="center" android:textSize="30sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeAndCongrats" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="Level Rules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewLevelRules" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeAndCongrats"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="24sp" android:textAllCaps="false"
                    android:textStyle="italic"/>
            <TextView
                    android:text="Rules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewRules" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewLevelRules"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Analysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewAnalysisLabel"
                    android:textStyle="italic" android:textSize="24sp"/>
            <TextView
                    android:text="Analysis Data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewAnalysis" android:textSize="18sp"/>
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewBlank"
                            android:textSize="18sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewLevel"
                            android:textSize="18sp" android:textAlignment="center" android:textStyle="bold"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewGame"
                            android:textSize="18sp" android:layout_marginLeft="8sp" android:textStyle="bold"
                            android:textAlignment="center"/>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewTotalProblemsLabel"
                            android:textSize="18sp" android:text="@string/strings_problems"/>
                    <TextView
                            android:text="Problems"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewProblemsValue"
                            android:textSize="18sp" android:layout_marginLeft="8sp" android:textAlignment="center"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewProblemViewGame"
                            android:textSize="18sp" android:layout_marginLeft="8sp" android:textAlignment="center"/>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewProblemsAttemptedLabel"
                            android:textSize="18sp" android:text="@string/strings_attempted"/>
                    <TextView
                            android:text="Attempted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewAttemptedValue"
                            android:textSize="18sp" android:layout_marginLeft="8sp" android:textAlignment="center"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewAttemptedValueGame"
                            android:textSize="18sp" android:layout_marginLeft="8sp" android:textAlignment="center"/>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewRightLabel"
                            android:textSize="18sp" android:text="@string/strings_correct"/>
                    <TextView
                            android:text="Correct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewRightValue"
                            android:textSize="18sp" android:layout_marginLeft="8sp" android:textAlignment="center"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewRightValueGame"
                            android:textSize="18sp" android:layout_marginLeft="8sp" android:textAlignment="center"/>
                </TableRow>
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="@string/strings_fastest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewFastestLabel"
                            android:textSize="18sp"/>
                    <TextView
                            android:text="fastest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewFastestValue"
                            android:textSize="18sp" android:layout_marginLeft="8sp" android:textAlignment="center"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewFastestValueGame"
                            android:textSize="18sp" android:layout_marginLeft="8sp" android:textAlignment="center"/>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewAverageLabel"
                            android:textSize="18sp" android:text="@string/strings_average"/>
                    <TextView
                            android:text="Average"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewAverageValue"
                            android:textSize="18sp" android:layout_marginLeft="8sp" android:textAlignment="center"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textViewAverageValueGame"
                            android:textSize="18sp" android:layout_marginLeft="8sp" android:textAlignment="center"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="@string/strings_stop"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/buttonClose" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/scrollView2"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewProduct"
            app:layout_constraintTop_toTopOf="@+id/buttonClose" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/app_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewVersion" app:layout_constraintStart_toStartOf="@+id/textViewProduct"
            app:layout_constraintTop_toBottomOf="@+id/textViewProduct"
            app:layout_constraintBottom_toBottomOf="@+id/buttonClose"/>
</android.support.constraint.ConstraintLayout>